<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="250dp"
    android:layout_margin="8dp"
    android:background="@null"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/countryimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/beach"
                tools:layout_editor_absoluteX="-47dp"
                tools:layout_editor_absoluteY="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/countryimage"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:alpha="0.5"
                    android:background="@drawable/bg_transparent"
                    android:padding="6dp"
                    android:text="New"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/profile"
                    android:text="New"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/profile"
                    android:text="New"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/profile"
                    android:text="New"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/countryimage">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Thailand"
                        android:id="@+id/titlelabel"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="18 tours"
                        android:textColor="@color/colorWhite"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:alpha="0.5"
                    android:background="@drawable/bg_transparent"
                    android:drawableBottom="@drawable/ic_star_black_24dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="4.0"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/country_rate_id"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_regular"
                    tools:layout_editor_absoluteY="93dp" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>